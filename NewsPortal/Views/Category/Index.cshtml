
@{
    ViewBag.Title = "Index";
}
@model List<BLL.DTO.CategoryDTO>
<h2>Categories</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Details</th>
        <th>Delete</th>
    </tr>
    @foreach(var i in Model)
            {
                <tr>
                    <td>@i.id</td>
                    <td>@i.name</td>
                    <td>
                        <a href="/Category/Details/@i.id" class="btn btn-info">Details</a>
                    </td>
                    <td>
                        <a href="/Category/Delete/@i.id" class="btn btn-info">Delete</a>
                    </td>
                </tr>
            }
</table>





